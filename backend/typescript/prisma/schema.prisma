generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model test {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model users {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  v              Int             @map("__v")
  authId         String
  email          String
  firstName      String
  lastName       String
  role           String
  kitchenRequest kitchenRequest?
}

//tina-emma/kitchen-request-model
model kitchenRequest {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  v             Int      @map("__v")
  requestName   String
  requester     String
  location      String
  shiftTime     DateTime
  meal          String
  cookingMethod String
  frequency     String
  user_id       String   @unique @db.ObjectId
  users         users?   @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
