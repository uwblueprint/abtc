generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model test {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model users {
   id        String @id @default(auto()) @map("_id") @db.ObjectId
   authId    String
   email     String
   firstName String
   lastName  String
   role      Role
   site_maintenance_reqs req_site_maintenance[]
 }


enum Role {
  VOLUNTEER
  ADMIN
}

// aaon-gurshabt/site-maintenance-req-model
 model req_site_maintenance {
    id             String @id @default(auto()) @map("_id") @db.ObjectId
    v              Int    @map("__v")
    requestName    String
    requester      users @relation(fields: [requesterId], references: [id])
    requesterId    String @db.ObjectId
    location       String
    time           DateTime
    frequency      String
 }

